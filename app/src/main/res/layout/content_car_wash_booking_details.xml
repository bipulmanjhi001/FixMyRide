<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_car_wash_booking_details"
    android:background="@drawable/background"
    android:layout_marginTop="56dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookingdetails.Car_Wash_Booking_Details">
    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:background="@color/white"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="6dp"
            android:text="@string/bookingdetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginTop="6dp"
            android:text="@string/bookingdetailstext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/white"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="50dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/bookingdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
           <LinearLayout
               android:id="@+id/pickdateforbookinglayout"
               android:layout_marginTop="10dp"
               android:orientation="horizontal"
               android:background="@color/white"
               android:layout_width="match_parent"
               android:layout_height="40dp">
               <LinearLayout
                   android:layout_gravity="center"
                   android:gravity="left"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/displaybookingdate"
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:paddingLeft="20dp"
                       android:textSize="14dp"
                       android:textStyle="bold"
                       android:hint="ADD DATE"
                       android:textColor="@color/cardview_dark_background"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
               </LinearLayout>
               <LinearLayout
                   android:layout_gravity="center"
                   android:gravity="right"
                   android:layout_weight="1"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <ImageView
                       android:layout_gravity="center"
                       android:gravity="center"
                       android:background="@drawable/calendar"
                       android:layout_marginRight="10dp"
                       android:layout_width="20dp"
                       android:layout_height="20dp" />
               </LinearLayout>
           </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            android:focusableInTouchMode="true"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:text="@string/bookingtime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:id="@+id/bookingtimelayout"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/displaybookingtime"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:paddingLeft="20dp"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:hint="ADD TIME"
                        android:textColor="@color/cardview_dark_background"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:layout_gravity="center"
                    android:gravity="right"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:background="@drawable/clock_icon"
                        android:layout_marginRight="10dp"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
