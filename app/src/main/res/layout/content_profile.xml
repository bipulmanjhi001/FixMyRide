<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_profile"
    android:layout_marginTop="56dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.Profile">
    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
           <View
               android:background="@color/white"
               android:layout_marginLeft="40dp"
               android:layout_marginRight="40dp"
               android:layout_width="match_parent"
               android:layout_height="1dp"/>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:textStyle="bold"
                android:fontFamily="HelveticaCondensed"
                android:gravity="center"
                android:text="@string/profiledetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="@color/white"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

                   <com.ust.fixmyride.model.CircularImageView
                       android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:background="@drawable/lady"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/profilepicture" />


            <TextView
                android:layout_marginTop="4dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14dp"
                android:textColor="@color/white"
                android:text="@string/editprofile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
             <com.ust.fixmyride.model.CircularImageView
                 android:id="@+id/cameraclick"
                 android:layout_marginRight="20dp"
                 android:background="@drawable/edit_icon"
                 android:layout_width="50dp"
                 android:layout_height="50dp" />
            </LinearLayout>
         <LinearLayout
           android:layout_marginRight="20dp"
           android:layout_marginLeft="20dp"
           android:orientation="vertical"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
            <TextView
                android:id="@+id/getfname"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:textColor="@color/white"
                android:text="User First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:singleLine="true"/>
             <View
                 android:background="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
             <TextView
                 android:id="@+id/getlname"
                 android:layout_marginTop="4dp"
                 android:layout_marginBottom="4dp"
                 android:textStyle="bold"
                 android:textSize="16dp"
                 android:textColor="@color/white"
                 android:text="User Last Name"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight = "1"
                 android:ellipsize = "end"
                 android:padding = "3dp"
                 android:singleLine="true"/>
             <View
                 android:background="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
             <TextView
                 android:id="@+id/getaddress"
                 android:layout_marginTop="4dp"
                 android:layout_marginBottom="4dp"
                 android:textStyle="bold"
                 android:textSize="16dp"
                 android:textColor="@color/white"
                 android:text="Address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight = "1"
                 android:ellipsize = "end"
                 android:padding = "3dp"
                 android:singleLine="false"/>
             <View
                 android:background="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
             <TextView
                 android:id="@+id/getpnumber"
                 android:layout_marginTop="4dp"
                 android:layout_marginBottom="4dp"
                 android:textStyle="bold"
                 android:textSize="16dp"
                 android:textColor="@color/white"
                 android:text="Phone Number"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight = "1"
                 android:ellipsize = "end"
                 android:padding = "3dp"
                 android:singleLine="true"/>
             <View
                 android:background="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
             <TextView
                 android:id="@+id/getemail"
                 android:layout_marginTop="4dp"
                 android:layout_marginBottom="4dp"
                 android:textStyle="bold"
                 android:textSize="16dp"
                 android:textColor="@color/white"
                 android:text="Email-Id"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_weight = "1"
                 android:ellipsize = "end"
                 android:padding = "3dp"
                 android:singleLine="true"/>
             <View
                 android:background="@color/white"
                 android:layout_width="match_parent"
                 android:layout_height="1dp"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
