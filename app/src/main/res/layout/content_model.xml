<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="50dp"/>
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="ADD YOUR CAR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:text="10 CAR BRANDS IS AVAILABLE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="50dp"/>
        <View
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/white"
            android:layout_width="260dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="100dp"
                android:background="@drawable/circle"
                android:layout_height="30dp" >
                <TextView
                    android:text="01"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="100dp"
                android:background="@drawable/circle"
                android:layout_height="30dp" >
                <TextView
                    android:text="02"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/whitecircle"
                android:layout_height="30dp">
                <TextView
                    android:text="03"
                    android:textStyle="bold"
                    android:textColor="@color/cardview_dark_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="PICK YOUR BRANDS"
                android:textSize="8dp"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="PICK YOUR MODEL"
                android:textSize="8dp"
                android:textStyle="bold"
                android:layout_marginRight="30dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="MORE INFO"
                android:textSize="8dp"
                android:textStyle="bold"
                android:layout_marginLeft="40dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="1dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="10 CAR BRANDS IS AVAILABLE"
                android:textSize="7dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="10 CAR MODELS IS AVAILABLE"
                android:textSize="6dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="ADD CAR MORE INFORMATION"
                android:textSize="7dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:background="@drawable/car_image"
                android:layout_width="180dp"
                android:layout_height="80dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/modellist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </ListView>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>