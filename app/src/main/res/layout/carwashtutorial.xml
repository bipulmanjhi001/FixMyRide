<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="16dp"
            android:text="Choose service just click on service icons and for uncheck click outside service icons "
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="50dp"
            android:background="@drawable/tap"
            android:layout_gravity="center"
            android:rotation="210"
            android:layout_height="50dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="260dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="30dp"
            android:gravity="center"
            android:background="@drawable/whitecircle"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="1"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="30dp"
            android:gravity="center"
            android:layout_marginLeft="130dp"
            android:background="@drawable/whitecircle"
            android:layout_height="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:text="2"
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="30dp"
                android:gravity="center"
                android:background="@drawable/whitecircle"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="3"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_marginLeft="130dp"
                android:background="@drawable/whitecircle"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="4"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="30dp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/whitecircle"
                android:layout_height="30dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="5"
                    android:textSize="15dp"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="40dp"
                android:gravity="center"
                android:layout_marginLeft="130dp"
                android:layout_height="40dp">
                <TextView
                    android:id="@+id/skiptutorial2"
                    android:layout_width="wrap_content"
                    android:text="Skip"
                    android:textStyle="italic|bold"
                    android:textSize="16dp"
                    android:textColor="@color/white"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
  <ImageView
      android:layout_gravity="center"
      android:layout_width="40dp"
      android:background="@drawable/showvector"
      android:layout_marginBottom="0dp"
      android:layout_height="40dp" />
</LinearLayout>