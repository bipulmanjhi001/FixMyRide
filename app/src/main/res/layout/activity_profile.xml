<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    android:id="@+id/profile_coordinatorlayout"
    android:fitsSystemWindows="true"
    tools:context=".brand.Pick_Your_Brand">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:gravity="center"
        android:background="@color/colorPrimaryDark"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        app:layout_collapseMode="pin"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center" >
         <LinearLayout
             android:orientation="vertical"
             android:layout_width="wrap_content"
             android:gravity="center"
             android:layout_gravity="center"
             android:layout_alignParentRight="true"
             android:layout_height="wrap_content">
            <TextView
                android:text="E-MAIL ADDRESS"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:id="@+id/username2"
                android:layout_width = "wrap_content"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:singleLine = "true" />
            <TextView
                android:id="@+id/useremail"
                android:text="JOLEA@GMAIL.COM"
                android:textColor="#ffffff"
                android:textSize="8dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginLeft="1dp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:ellipsize = "end"
                android:padding = "3dp"
                android:singleLine = "true" />
           </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="YOU ARE WELCOME"
                        android:textColor="#ffffff"
                        android:textSize="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textStyle="bold"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:layout_weight = "1"
                        android:ellipsize = "end"
                        android:singleLine = "true" />
                    <TextView
                        android:text="JOLEA D.MCRAFLANE"
                        android:textColor="#ffffff"
                        android:textSize="8dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_marginLeft="1dp"
                        android:textStyle="bold"
                        android:id="@+id/username"
                        android:layout_width = "wrap_content"
                        android:layout_height = "match_parent"
                        android:layout_weight = "1"
                        android:ellipsize = "end"
                        android:singleLine = "true" />

            </LinearLayout>
        </RelativeLayout>
           </android.support.v7.widget.Toolbar>

    <include layout="@layout/content_profile" />

    <com.ust.fixmyride.model.CircularImageView
        android:id="@+id/profilefab"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_anchor="@id/toolbar"
        app:layout_anchorGravity="top|center"
        android:src="@drawable/lady"/>

</android.support.design.widget.CoordinatorLayout>
